{
  "family": "task-with-volumes",
  "networkMode": "bridge",
  "volumes": [
    {
      "name": "data-volume",
      "host": {}
    },
    {
      "name": "config-volume",
      "host": {
        "sourcePath": "/tmp/config"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "app",
      "image": "busybox:latest",
      "memory": 128,
      "cpu": 256,
      "essential": true,
      "command": ["sh", "-c", "echo 'Testing volumes' > /data/test.txt && cat /data/test.txt && sleep 60"],
      "mountPoints": [
        {
          "sourceVolume": "data-volume",
          "containerPath": "/data",
          "readOnly": false
        },
        {
          "sourceVolume": "config-volume",
          "containerPath": "/config",
          "readOnly": true
        }
      ]
    }
  ]
}