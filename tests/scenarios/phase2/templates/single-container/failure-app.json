{
  "family": "failure-app",
  "networkMode": "bridge",
  "requiresCompatibilities": ["EC2"],
  "cpu": "128",
  "memory": "256",
  "containerDefinitions": [
    {
      "name": "failure-container",
      "image": "alpine:latest",
      "cpu": 128,
      "memory": 256,
      "essential": true,
      "command": [
        "sh",
        "-c",
        "echo 'Application started' && sleep 30 && echo 'Simulating failure' && exit 1"
      ],
      "logConfiguration": {
        "logDriver": "json-file",
        "options": {
          "max-size": "10m",
          "max-file": "3"
        }
      }
    }
  ]
}