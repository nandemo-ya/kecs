{
  "family": "batch-processor",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "containerDefinitions": [
    {
      "name": "batch-processor",
      "image": "batch-processor:v1.0",
      "essential": true,
      "environment": [
        {
          "name": "BATCH_SIZE",
          "value": "100"
        },
        {
          "name": "S3_BUCKET",
          "value": "my-batch-data"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/batch-processor",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "batch"
        }
      },
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ],
      "resourceRequirements": [
        {
          "type": "GPU",
          "value": "1"
        }
      ]
    }
  ],
  "ephemeralStorage": {
    "sizeInGiB": 30
  },
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "executionRoleArn": "arn:aws:iam::123456789012:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::123456789012:role/batchProcessorRole",
  "tags": [
    {
      "key": "Type",
      "value": "batch"
    },
    {
      "key": "GPU",
      "value": "enabled"
    }
  ]
}