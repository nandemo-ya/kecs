# Production environment variables for KECS

# Server configuration
PORT=8080
ADMIN_PORT=8081

# Web UI configuration
KECS_UI_BASE_PATH=/ui
KECS_UI_ENABLED=true

# Security
KECS_CORS_ALLOWED_ORIGINS=https://your-domain.com,https://api.your-domain.com
KECS_AUTH_ENABLED=false  # Set to true when implementing authentication

# Storage
KECS_STORAGE_TYPE=duckdb
KECS_STORAGE_PATH=/data/kecs.db

# Kubernetes
KECS_IN_CLUSTER=true
KECS_NAMESPACE=kecs-system

# Logging
KECS_LOG_LEVEL=info
KECS_LOG_FORMAT=json

# AWS compatibility
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# Monitoring
KECS_METRICS_ENABLED=true
KECS_TRACING_ENABLED=false